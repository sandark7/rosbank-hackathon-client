.points
  font-size 0
  text-align center
  color #000

  img
    size 125px

  &-list
    text-align left
    margin 40px 85px 0
    width 970px

    &__address
      display block
      color #3a87ad
      font-size 18px
      margin 20px 0

    &__pos
      color #000
      font-size 14px

    &__new
      font-size 16px
      font-weight 700
      letter-spacing .5px

    .panel
      text-align center
      display inline-block
      vertical-align top
      width 300px
      height 200px
      margin-right 35px

      .panel-title
        font-weight 700
        letter-spacing 1px

      &:hover
        text-decoration none

        .points-list__address
          text-decoration underline

      &:nth-of-type(3n)
        margin-right 0

      .glyphicon-plus
        font-size 33px
        display block
        margin 50px 0 15px

  &-pos
    input
      width 90%
      display inline-block
      margin-bottom 10px

      &:last-of-type
        margin-bottom 0

    .glyphicon-plus
      margin-left 8px

    span
      cursor pointer
      margin 7px 0 0 10px

      &:hover
        color #000
