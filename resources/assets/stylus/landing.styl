.landing
  background url('../../../public/images/background.png') center no-repeat
  background-size cover
  text-align center
  min-width 860px

  .navbar
    background-color transparent
    border none

  &-content
    margin 100px 0 0 300px
    font-family 'HelveticaNeue', sans-serif
    display inline-block
    color #fff
    line-height 1
    text-align left
    letter-spacing 1px
    width 745px

    &-title
      display inline-block
      padding 15px 20px
      margin-bottom 12px
      background-color #000
      text-transform uppercase
      font-size 48px
      font-weight 700

    &-subtitle
      display inline-block
      margin-bottom 12px
      padding 15px 20px
      font-size 32px
      background-color #000

    &-text
      display block
      margin-bottom 20px

      span
        display inline-block
        padding 15px 20px
        background-color #000
        font-size 24px

        &:not(:first-child)
          padding-top 0

    .btn
      font-weight 400
      font-size 24px
      padding 11px 35px
