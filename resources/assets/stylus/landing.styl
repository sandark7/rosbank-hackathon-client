.landing
  background url('../../../public/images/background.png') center no-repeat
  background-size cover
  text-align center
  min-width 860px

  .navbar
    background-color transparent
    border none

  &-content
    margin 100px 0 0 300px
    font-family 'PT Sans', sans-serif
    display inline-block
    color #fff
    line-height 1
    text-align left
    font-weight 700
    letter-spacing 1px
    width 527px

    &-title
      display inline-block
      padding 12px 11px
      margin-bottom 12px
      background-color #000
      text-transform uppercase
      font-size 36px

    &-subtitle
      display inline-block
      margin-bottom 12px
      padding 12px 11px
      font-size 24px
      background-color #000

    &-text
      display block
      margin-bottom 20px

      span
        display inline-block
        padding 12px 11px
        background-color #000
        font-size 18px

        &:not(:first-child)
          padding-top 0

    .btn
      font-family 'Roboto', sans-serif
      font-weight 400
      font-size 18px
      padding 11px 35px
